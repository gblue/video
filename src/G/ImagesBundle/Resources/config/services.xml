<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--
    <parameters>
    </parameters>
    -->

    <services>
        <service id="images.manager" class="G\ImagesBundle\Service\Images">
            <argument>%images%</argument>
        </service>
        <service id="images.twig.images_extension" class="G\ImagesBundle\Twig\Extensions\GImagesExtension">
            <argument type="service" id="images.manager" />
            <tag name="twig.extension" />
        </service>
    </services>
</container>
